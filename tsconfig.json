{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "lib": ["es5", "es6", "dom"],
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["./tsup.config.ts","./dist","**/*.test.ts"]
}
